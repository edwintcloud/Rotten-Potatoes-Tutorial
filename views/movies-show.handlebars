<div class="text-right">
    <a href="/movies/{{movie.id}}/reviews/new" class="btn btn-primary">Write Review</a>
</div>

<div class="row">
    <div class="col-sm-4">
        <img class="img-responsive" src="https://image.tmdb.org/t/p/w500{{movie.poster_path}}"/>
    </div>
        <div class="col-sm-8">
            <h1>{{movie.title}}</h1>
            <p class="lead">{{movie.overview}}</p>
        </div>
    </div>

    <div class="embed-responsive embed-responsive-21by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{movie.trailer_youtube_id}}?rel=0"></iframe>
    </div>

    {{#if reviews}}<h3>Reviews</h3>
        <hr>{{/if}}
    {{#each reviews}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="pull-right trashit">
                    <form method="POST" action="/movies/{{this.movieId}}/reviews/{{this._id}}?_method=DELETE">
                        <button class="fa fa-trash-o" type="submit"></button>
                    </form>
                </div>
                <h3 class="panel-title"><a href="/movies/{{this.movieId}}/reviews/{{this._id}}">{{this.title}}</a>&emsp;&emsp;{{stars this.rating}}</h1>
                    <span class="timestamp">Last Modified: {{prettyDate this.date}}</span>         
            </div>
            <div class="panel-body">                
                <p>{{this.description}}</p>
            </div>
        </div>
    {{/each}}